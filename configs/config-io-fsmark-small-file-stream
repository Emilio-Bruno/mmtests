# List of monitors
export RUN_MONITOR=yes
export MONITORS_ALWAYS=
export MONITORS_PLAIN=
export MONITORS_GZIP="proc-vmstat top slabinfo proc-meminfo"
export MONITORS_WITH_LATENCY="vmstat iostat"
export MONITOR_UPDATE_FREQUENCY=10

# FS-Mark
export FSMARK_FILESIZE=4096
export FSMARK_NR_SUB_DIRECTORIES=1000
export FSMARK_NR_FILES_PER_ITERATION=$((MEMTOTAL_BYTES/$FSMARK_FILESIZE/20))
export FSMARK_ITERATIONS=60
export FSMARK_KEEP_FILES=yes
